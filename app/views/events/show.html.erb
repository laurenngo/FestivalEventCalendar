

<div class="uk-grid">

    <div class="each-host-event uk-container uk-width-1-1 uk-container-center">
      <!-- <div class="event-headings"> -->
          <%= cl_image_tag @event.image, :class => "event-image" %>
          <div class="event-name"><%= @event.name %></div>
          <%= link_to "EDIT", edit_event_path %>
      <!-- </div> -->
      <div class="event-details">
          <a href="<%= @event.link %>">LINK</a>
          <div class="event-desc"><%= @event.description %></div>
          <div class="event-video"><iframe width="560" height="315" src="https://www.youtube.com/embed/<%= @event.video %>" frameborder="0" allowfullscreen class="video-frame"></iframe></div>
          <div class="event-purchase"><%= @event.purchase %></div>
          <div class="event-price"><%= @event.price == 0 ? 'Free' : @event.price %></div>
      </div>


    </div>

    <div class="comment-field">
      <div class="form-container">
        <%= render partial: 'layouts/comment_form', :locals => {event:@event,comment_ref:@comment_ref, comment:@comment} %>
      </div>
      <div class="display-container">
        <ul>
        <%= render partial: 'layouts/comment_display', :collection=> @event.comments %>
        </ul>
      </div>
    </div>
