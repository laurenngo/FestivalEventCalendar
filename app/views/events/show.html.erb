

<div class="uk-grid">

    <div class="each-host-event uk-container uk-width-1-1 uk-container-center">
      <!-- <div class="event-headings"> -->
          <img class="event-img" src=<%= @event.image %>>
          <div class="event-name"><%= @event.name %></div>
          <%= link_to "EDIT", edit_event_path %>
      <!-- </div> -->
      <div class="event-details">
          <a href="<%= @event.link %>">LINK</a>
          <div class="event-desc"><%= @event.description %></div>
          <div class="event-video"><%= @event.video %></div>
          <div class="event-purchase"><%= @event.purchase %></div>
          <div class="event-price"><%= @event.price %></div>
      </div>


    </div>

    <div class="comment-field">
      <div class="form-container">
        <%= render partial: 'layouts/comment_form' %>
      </div>
      <div class="display-container">
        <ul>
        <%= render partial: 'layouts/comment_display', :collection=> @event.comments %>
        </ul>
      </div>
    </div>

</div>