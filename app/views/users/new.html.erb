<%= form_for @user, :class=>"uk-form uk-form-stacked" do |f|%>
  <div class="uk-form-row">
    <%= f.text_field :name, :placeholder => "Enter your name.", :wrapper =>"uk-form-controls" %>
  </div>

  <div class="uk-form-row">
    <%= f.text_field :email, :placeholder => "Enter your email.", :wrapper =>"uk-form-controls" %>
  </div>
  <div class="uk-form-row">
    <%= f.password_field :password, :placeholder => "Enter your password.", :wrapper =>"uk-form-controls" %>
  </div>
  <div class="uk-form-row">
    <%= f.password_field :password_confirmation, :placeholder => "Confirm your password.", :wrapper =>"uk-form-controls" %>
  </div>
  <div class="uk-form-row">
    <%= f.submit "Submit", :class=>"uk-button uk-button-primary" %>
    <%= f.check_box :user_type%>
    <%= f.label :user_type, "I am an event HOST" %>
  </div>


<% end %>