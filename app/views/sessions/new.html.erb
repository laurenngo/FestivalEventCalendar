<%= form_for :user, html:{:class=>"uk-form uk-form-stacked"} do |f|%>

  <%= link_to "LOGIN WITH FACEBOOK", "/auth/facebook" %>


  <div class="uk-form-row">
    <div class="uk-form-controls">
    <%= f.text_field :email, :placeholder => "Enter your email." %>
    </div>
  </div>
  <div class="uk-form-row">
    <div class="uk-form-controls">
    <%= f.password_field :password, :placeholder => "Enter your password." %>
    </div>
  </div>

  <div class="uk-form-row">
    <div class="uk-form-controls">
    <%= f.submit "LOGIN", :class=>"uk-button uk-button-primary" %>
    </div>
  </div>



<% end %>