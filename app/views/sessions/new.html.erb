<%= form_for :user, :class=>"uk-form uk-form-stacked" do |f|%>

  <%= link_to "LOGIN WITH FACEBOOK", "/auth/facebook" %>


  <div class="uk-form-row">
    <%= f.text_field :email, :placeholder => "Enter your email.", :wrapper =>"uk-form-controls" %>
  </div>
  <div class="uk-form-row">
    <%= f.password_field :password, :placeholder => "Enter your password.", :wrapper =>"uk-form-controls" %>
  </div>

  <div class="uk-form-row">
    <%= f.submit "LOGIN", :class=>"uk-button uk-button-primary" %>
  </div>



<% end %>